<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthStatus.Pages.ExplorePage"
             Title="ExplorePage">
    <ScrollView>
        <VerticalStackLayout>
            <CollectionView
                x:Name="CardExplore">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            CornerRadius="5">
                            <VerticalStackLayout>
                                <Image
                                    WidthRequest="100"
                                    HeightRequest="100"
                                    Source="{Binding Image}" />
                                <Label
                                    Text="Title" />
                            </VerticalStackLayout>
                            
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>