<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HealthStatus.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HealthStatus"
    xmlns:page="clr-namespace:HealthStatus.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="HealthStatus"
    BackgroundColor="Black">

    <FlyoutItem>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate page:HomePage}" />
        <ShellContent
            Title="Exploe"
            Icon="compass.png"
            ContentTemplate="{DataTemplate page:ExplorePage}" />
        <ShellContent
            Title="Sleep"
            Icon="moon.png"
            ContentTemplate="{DataTemplate page:SleepPage}" />
        <ShellContent
            Title="Insights"
            Icon="diagram.png"
            ContentTemplate="{DataTemplate page:DiagramsPage}" />
        <ShellContent
            Title="Account"
            Icon="profile.png"
            ContentTemplate="{DataTemplate page:ProfilePage}" />

    </FlyoutItem>


</Shell>
